#include<iostream>
#include<math.h>
using namespace std;
int main(){
int x,y,z;
cout<<"write the first number"<<endl;
cin>>x;
cout<<"write the second number"<<endl;
cin>>y;
cout<<"write the 3rd number"<<endl;
cin>>z;
cout<<"the sum of the 3 numbers are: "<<x+y+z<<endl;
cout<<"the difference of the 3 numbers are"<<x-y-z<<endl;
cout<<"the product of the 3 numbers are"<<x*y*z<<endl;
cout<<"the quotient of the 3 numbers are"<<(x/y)/z<<endl;

return 0;






}
